{
	"name": "rundown",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently -c auto -n 'next,docker,studio,worker,bull-board' 'next dev --turbopack --experimental-https' 'docker compose up' 'drizzle-kit studio' 'tsx watch --clear-screen=false server/controllers/worker.ts' 'tsx watch --clear-screen=false server/controllers/bull-board.ts'",
		"build": "next build",
		"start": "next start",
		"lint": "biome check",
		"lintf": "biome check --write --unsafe",
		"bull-board": "tsx server/controllers/bull-board.ts",
		"db:push": "drizzle-kit push",
		"prod:worker": "tsx server/controllers/worker.ts",
		"prod:register-jobs": "tsx server/controllers/register-jobs.ts",
		"build:worker": "esbuild server/controllers/worker.ts --bundle --platform=node --target=node22 --outfile=build/services/worker.js",
		"bootstrap": "drizzle-kit push --force && pnpm run prod:register-jobs"
	},
	"dependencies": {
		"@bull-board/api": "^6.12.0",
		"@bull-board/express": "^6.12.0",
		"@next/env": "^15.4.5",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-radio-group": "^1.3.7",
		"@radix-ui/react-scroll-area": "^1.2.9",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tooltip": "^1.2.7",
		"better-auth": "^1.3.4",
		"bullmq": "^5.56.9",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.4",
		"express": "^5.1.0",
		"lucide-react": "^0.536.0",
		"nanoid": "^5.1.5",
		"next": "15.4.2-canary.31",
		"next-themes": "^0.4.6",
		"openai": "^5.12.2",
		"pg": "^8.16.3",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-markdown": "^10.1.0",
		"rss-parser": "^3.13.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"zod": "^4.0.15"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@tailwindcss/postcss": "^4",
		"@tailwindcss/typography": "^0.5.16",
		"@types/express": "^5.0.3",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"concurrently": "^9.2.0",
		"drizzle-kit": "^0.31.4",
		"esbuild": "^0.25.8",
		"tailwindcss": "^4",
		"tsx": "^4.20.3",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5"
	}
}
